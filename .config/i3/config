# ~/.config/i3/config

# Shorten --no-startup-id
set $no_id --no-startup-id
# Store i3lock parameters on a single place
set $locker i3lock --ignore-empty-password --color=242424
# STARTUP PROGRAMS
# Authentication agent
exec $no_id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1
# Read and launch .desktop files from '~/.config/autostart'
exec $no_id dex --autostart --environment i3
# X Screen Saver utility to: listen to screen events and
# launch an external locker (i3lock)
exec $no_id xss-lock --transfer-sleep-lock -- $locker
# Compositor
exec $no_id picom --config ~/.config/picom/picom.conf
# Set wallpaper
exec $no_id feh --no-fehbg --bg-fill -F ~/Pictures/mountains.png
# Notification daemon
exec $no_id dunst -config ~/.config/dunst/dunstrc
# Load Xresources (Wayland anyone?)
exec_always xrdb -load ~/.config/X11/Xresources
# Turn off screen after 10 minutes (Default, I think, but anyway)
exec_always xset dpms 600
# No BEEP please
exec_always xset b 0
# Set keyboard auto-repeat rate
exec_always xset r rate 450 30
# Again, wayland anyone?
exec_always xsetroot -cursor_name left_ptr
# Set keyboard layouts and the ability to swap between them 
# with ALT + Space
exec_always setxkbmap -layout us,es -option 'grp:alt_space_toggle'
# Turn on numpad
exec_always numlockx on
# Network manager applet (Network management)
exec $no_id nm-applet
# Volumeicon  (Control volume levels)
exec $no_id volumeicon

# VARIABLES
# modkey
set $mod Mod4
# window colors
set $text_color #f2f2f2
set $active_text_color #90c2ff
set $bg_color #313131
set $ibg_color #1e1e1e
set $ubg_color #c01c28
set $indicator_color #3584e4
# i3bar colors
set $separator #77767b
set $active_wp #3584e4 
set $active_bd #78aeed
set $focused_wp #1a5fb4
set $focused_bd #3584e4
# applications
set $file_manager nemo
set $term alacritty
set $browser brave-browser

# Options
font pango:JetBrainsMonoSemiBold 9
gaps inner 4
floating_modifier $mod

# Order:
# <colorclass> <border> <background> <text> <indicator> <child_border>
client.focused $bg_color $bg_color $active_text_color $indicator_color $bg_color
client.unfocused $ibg_color $ibg_color $text_color $ibg_color $ibg_color
client.focused_inactive $ibg_color $ibg_color $text_color $ibg_color
client.urgent $ubg_color $ubg_color $text_color $ubg_color

bar {
    position top
    status_command i3blocks
    colors {
        background $ibg_color
        statusline $text_color
        separator $separator
        focused_workspace $focused_bd $focused_wp $text_color
        active_workspace $active_bd $active_wp $text_color
        inactive_workspace $ibg_color $ibg_color $text_color
        urgent_workspace $ubg_color $ubg_color $text_color
    }
}

bindsym XF86AudioRaiseVolume exec $no_id pamixer --increase 5
bindsym XF86AudioLowerVolume exec $no_id pamixer --decrease 5
bindsym XF86AudioMute exec $no_id pamixer --toggle-mute

# Use playerctl to control media players
bindsym XF86AudioPlay exec $no_id playerctl play-pause
bindsym XF86AudioNext exec $no_id playerctl next
bindsym XF86AudioPrev exec $no_id playerctl previous

# Use brightnessctl to adjust brightness
bindsym XF86MonBrightnessUp exec $no_id "brightnessctl set 10%+"
bindsym XF86MonBrightnessDown exec $no_id "brightnessctl set 10%-"

# start a terminal
bindsym $mod+Return exec $term
# Terminal + tmux
bindsym Mod1+Return exec $term -e tmux
# File manager
bindsym $mod+n exec $file_manager
# Browser
bindsym $mod+Shift+b exec $browser
# Use Print key to launch flameshot
bindsym Print exec flameshot gui

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# kill focused window
bindsym $mod+q kill

# Use i3's dmenu fork
bindsym $mod+d exec $no_id i3-dmenu-desktop --dmenu="dmenu -i -fn 'JetBrainsMono SemiBold-10'"
# Dmenu script to only show Power options
bindsym $mod+p exec $no_id ~/.local/bin/dmenu_power
# Screen locker
bindsym $mod+x exec $no_id $locker

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+c focus child

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show
# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# enter resize mode
bindsym $mod+r mode "resize"

mode "resize" {
    # These bindings trigger as soon as you enter the resize mode
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

# window rules
for_window [class="(?i)pavucontrol"] floating enable
for_window [class="(?i)nm-connection-editor"] floating enable
